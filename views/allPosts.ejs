<div class="container">
    <div class="mt-5">
        <div class="table-responsive-md col-md-10 m-auto">
            <table class="table mt-5 m-auto">
                <thead class="bg-success">
                    <tr>
                        <th scope="col">avatar</th>
                        <th scope="col">User</th>
                        <th scope="col">Title</th>
                        <th scope="col">Description</th>
                        <th scope="col">Preview</th>
                   
                    </tr>
                </thead>
              
                <% results.forEach(function(user) { %>
                    <% result.forEach(function(post) { %>
                <tbody>
                    <tr>
                        <td><img src="<%= user.avatar %>" alt="" class="rounded-circle" height="60" width="60">
                        </td>
                        <td class="text-small"><%= user.firstname %> <%= user.lastname %></td>
                        <td><%= post.postDescription %></td>
                        <td><%= post.postTitle %></td>
                        <td><%= post.postContent.substring(0, 1000)%></td>
                
                    </tr>
                </tbody>
                <% }); %>
                <% }); %>
            </table>
        </div>
    </div>
